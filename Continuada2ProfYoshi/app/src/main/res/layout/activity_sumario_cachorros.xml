<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SumarioCachorros">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cachorros Indicados para crianças: "
        android:textColor="#013AD2"
        android:id="@+id/tv_indicado_criancas"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0qq"
        android:textColor="#013AD2"
        android:id="@+id/tv_indicado_qtd"
        app:layout_constraintLeft_toRightOf="@+id/tv_indicado_criancas"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cachorros NÃO indicados para crianças: "
        android:textColor="#D22D01"
        android:id="@+id/tv_nao_indicado_criancas"
        app:layout_constraintTop_toBottomOf="@id/tv_indicado_criancas"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0ww"
        android:textColor="#D22D01"
        android:id="@+id/tv_nao_indicado_qtd"
        app:layout_constraintTop_toBottomOf="@id/tv_indicado_criancas"
        app:layout_constraintLeft_toRightOf="@+id/tv_nao_indicado_criancas"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cachorros: "
        android:textColor="#000000"
        android:id="@+id/tv_total_cachorros"
        app:layout_constraintTop_toBottomOf="@id/tv_nao_indicado_criancas"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0tt"
        android:textColor="#000000"
        android:id="@+id/tv_total_cachorros_qtd"
        app:layout_constraintTop_toBottomOf="@id/tv_nao_indicado_criancas"
        app:layout_constraintLeft_toRightOf="@+id/tv_total_cachorros"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/tv_total_cachorros">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_lista"
            android:layout_marginTop="20dp">


        </LinearLayout>

    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>